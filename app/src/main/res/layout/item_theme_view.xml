<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/selector">

    <TextView
        android:id="@+id/tv_header_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="300dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_xxlarge"
        android:layout_margin="@dimen/margin_medium"
        app:layout_constraintBaseline_toBaselineOf="@id/iv_header_theme"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Theme header" />

    <ImageView
        android:id="@+id/iv_header_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:src="@mipmap/ic_arrow_down"
        app:layout_constraintBottom_toBottomOf="@+id/tv_header_theme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_header_theme"
        app:layout_constraintTop_toTopOf="@+id/tv_header_theme" />

    <View
        android:layout_width="match_parent"
        android:background="?android:attr/listDivider"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/iv_header_theme" />

</android.support.constraint.ConstraintLayout>