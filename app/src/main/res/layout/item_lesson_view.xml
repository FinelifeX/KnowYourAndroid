<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/tv_header_lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lesson header"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxWidth="300dp"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/iv_header_lesson"/>

    <ImageView
        android:id="@+id/iv_header_lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:src="@mipmap/ic_arrow_l_to_r"

        app:layout_constraintBottom_toBottomOf="@+id/tv_header_lesson"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_header_lesson"
        app:layout_constraintTop_toTopOf="@+id/tv_header_lesson" />

</android.support.constraint.ConstraintLayout>