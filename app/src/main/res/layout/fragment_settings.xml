<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/container_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector"
        android:focusable="true"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_settings_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_colors"
            android:textColor="@android:color/black"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/text_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_color_chosen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_color"
            android:textColor="?attr/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="@dimen/text_xlarge"
            android:layout_margin="@dimen/activity_horizontal_margin"
            app:layout_constraintBottom_toBottomOf="@+id/tv_settings_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_settings_color" />

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@id/tv_settings_color"/>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>